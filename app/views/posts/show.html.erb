<h2><%= @post.title %></h2>
<p><%= @post.text %></p>

<p>
  <%= link_to 'edit', edit_post_path(@post) %>  |
  <%= link_to 'delete', post_path(@post),
                method: :delete,
                data: { confirm: "are you sure you wanna do that?" } %> |
  <%= link_to 'go back', posts_path %>
</p>

<h2>comments:</h2>
  <%= render @post.comments %>

<h3>add a comment:</h3>
<%= render 'comments/form' %>
